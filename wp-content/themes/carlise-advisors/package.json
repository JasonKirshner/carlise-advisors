{
  "name": "carlise-advisors-wordpress",
  "version": "0.0.1",
  "description": "A base theme for WordPress development",
  "main": "src/main.js",
  "scripts": {
    "build": "webpack --mode=development",
    "build:deferred-css": "postcss src/css/main.css -o assets/deferred.min.css -c tasks/postcss.config.js",
    "start": "webpack --watch --mode=development",
    "create-module": "sh ../../../private/scripts/create-module.sh",
    "create-mr": "sh ../../../private/scripts/create-merge-request.sh",
    "fix-styles": "stylelint --fix modules/**/*.css src/css/base/*.css src/css/main.css",
    "fix-js": "eslint --fix $PWD/'src/js/lib/*.js' && eslint --fix $PWD/'modules/**/*.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/carlise-advisorsco/carlise-advisors-wordpress.git"
  },
  "keywords": [
    "wordpress"
  ],
  "author": "Carlise Advisors",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/rcukusco/carlise-advisors-wordpress/issues"
  },
  "homepage": "https://gitlab.com/carlise-advisorsco/carlise-advisors-wordpress#readme",
  "husky": {
    "hooks": {
      "pre-commit": "node src/js/lib/sync-locks.js",
      "post-commit": "node src/js/lib/commit-synced-lock.js"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.7",
    "changed-git-files": "0.0.1",
    "core-js": "^3.6.5",
    "css-loader": "^5.0.0",
    "cssnano": "^4.1.10",
    "eslint-config-standard": "^16.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "file-loader": "^6.2.0",
    "fs": "0.0.1-security",
    "globby": "^11.0.1",
    "http-proxy-middleware": "^1.0.6",
    "husky": "^4.3.0",
    "jquery": "^3.5.1",
    "mini-css-extract-plugin": "^1.2.1",
    "postcss": "^8.1.4",
    "postcss-automath": "^1.0.1",
    "postcss-cli": "^8.2.0",
    "postcss-critical-split": "^2.5.3",
    "postcss-extend": "^1.0.5",
    "postcss-for": "^2.1.1",
    "postcss-import": "^13.0.0",
    "postcss-loader": "^4.0.4",
    "postcss-mixins": "^7.0.1",
    "postcss-nested": "^5.0.1",
    "postcss-preset-env": "^6.7.0",
    "standard": "^16.0.0",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "synp": "^1.9.4",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.7.2"
  },
  "dependencies": {
    "hamburgers": "^1.1.3",
    "in-viewport": "^3.6.0",
    "js-cookie": "^2.2.1",
    "object-fit-images": "^3.2.4",
    "plyr": "^3.6.3",
    "scroll-to-element": "^2.0.3",
    "swiper": "^6.3.5",
    "vanilla-lazyload": "^17.1.3"
  }
}
