{
  "extends": [
    "stylelint-config-standard"
  ],
  "ignoreFiles": [
    "./src/css/lib/*.css",
    "./assets/main.min.css"
  ],
  "rules": {
    "max-empty-lines": 1,
    "rule-empty-line-before": [
      "always",
      {
        "except": "first-nested"
      }
    ],
    "at-rule-empty-line-before": [
      "always",
      {
        "except": [
          "first-nested"
        ]
      }
    ],
    "selector-list-comma-newline-after": "always-multi-line",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "for",
          "extend"
        ]
      }
    ],
    "no-descending-specificity": null
  }
}
